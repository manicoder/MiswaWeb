{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true"
  },
  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "MLT-Admin-API",
    "Audience": "MLT-Admin-Client"
  },
  "Encryption": {
    "Key": "${ENCRYPTION_KEY}"
  },
  "MailerSend": {
    "SmtpUsername": "${MAILERSEND_USERNAME}",
    "SmtpPassword": "${MAILERSEND_PASSWORD}",
    "FromEmail": "noreply@mylittletales.com",
    "FromName": "MLT Admin"
  }
} 